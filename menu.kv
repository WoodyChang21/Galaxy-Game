<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0,0,0,.8
        Rectangle:
            size: self.size
    Label:
        text: root.parent.menu_label_string
        font_name:"C:\\Users\\User\\Desktop\\Python Project\\font\\space age.ttf"
        font_size: "60dp"
        pos_hint: {"center_x":.5, "center_y": .6}
    BoxLayout:
        orientation: "horizontal"
        size_hint: .8, .7
        pos_hint: {"center_x": .5, "center_y": .5}
        spacing: "20dp"
        Button:
            id: start_restart
            text: root.parent.menu_button_string
            font_name:"C:\\Users\\User\\Desktop\\Python Project\\font\\Eurostile.ttf"
            font_size: "30dp"
            pos_hint: {"center_y": .3}
            size_hint: .1,.15
            on_press: root.parent.on_menu_button_pressed()
            #background_normal resets the default color of the button
            background_normal: ''
            background_color: 1, .3, .4, .85
        Button:
            id: rank
            text: "RANK"
            font_name:"C:\\Users\\User\\Desktop\\Python Project\\font\\Eurostile.ttf"
            font_size: "30dp"
            pos_hint: {"center_y": .3}
            size_hint: .1,.15
            #background_normal resets the default color of the button
            background_normal: ''
            background_color: 1, .3, .4, .85
            on_press: 
                root.parent.on_rank_button_pressed()
                root.parent.update_rank()

